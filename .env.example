# Roovert Environment Variables
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local or any file with actual secrets

# API Configuration
NEXT_PUBLIC_API_URL=https://api.roovert.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authentication (if needed in future)
# AUTH_SECRET=your-secret-key-here
# AUTH_URL=http://localhost:3000

# Database (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/roovert

# External Services (if needed)
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key

# Analytics (optional)
# NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# Feature Flags (optional)
# NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=false
